name: WebChatSales Monitor

on:
  schedule:
    - cron: "*/5 * * * *"   # every 5 minutes
  workflow_dispatch:

jobs:
  monitor:
    runs-on: ubuntu-latest
    timeout-minutes: 5
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install python-dotenv requests

      - name: Create .env for monitor
        run: |
          {
            echo "URL=${{ secrets.URL }}";
            echo "TWILIO_ACCOUNT_SID=${{ secrets.TWILIO_ACCOUNT_SID }}";
            echo "TWILIO_AUTH_TOKEN=${{ secrets.TWILIO_AUTH_TOKEN }}";
            echo "TWILIO_FROM=${{ secrets.TWILIO_FROM }}";
            echo "TWILIO_TO=${{ secrets.TWILIO_TO }}";
          } > .env

      - name: Run monitor (Task Force SMS)
        run: python monitor_task_force_sms.py